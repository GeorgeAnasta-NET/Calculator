
@{
    ViewBag.Title = "View";
}

<h2>View</h2>


<div align="center">
    <h2>Simple Calculatar</h2> 
    @using (Html.BeginForm())
    {
        <table>
            <tr>
                <th> First Number </th>
                <td> <input type="text" id="txtFirstNumber" name="firstNumber" class="form-control" /> </td>
            </tr>
            <tr>
                <th> Last Number </th>
                <td> <input type="text" id="txtLastNumber" name="secondNumber" class="form-control" /> </td>
            </tr>
            <tr>
                <th><input type="submit" name="Cal" value="+" class="btn btn-primary" /> </th>
                <th><input type="submit" name="Cal" value="-" class="btn btn-primary" /> </th>
                <th><input type="submit" name="Cal" value="*" class="btn btn-primary" /> </th>
                <th><input type="submit" name="Cal" value="/" class="btn btn-primary" /> </th>
                <th><input type="submit" name="Cal" value="sqrt" class="btn btn-primary" /> </th>
                <th><input type="submit" name="Cal" value="x^2" class="btn btn-primary" /> </th>
            </tr>
            <tr>
                <th>Result</th>
                <td><input type="text" class="form-control" value="@ViewBag.Result" /> </td>
            </tr>
        </table>}
</div>

